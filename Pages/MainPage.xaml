<Page x:Class="FrekingCompareAnalysis.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FrekingCompareAnalysis.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Page.Resources>
        <!-- Скопіював стиль кнопки з GraphPage -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#007ACC"/>
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Background="#F8F9FA">
        <Border Background="White" 
                BorderBrush="#E9ECEF" 
                BorderThickness="1" 
                CornerRadius="5"
                Padding="30"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Width="300"
                >
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" >
                <Button Content="Завантажити файли/папку" 
                        Click="OnLoadClicked" 
                        Margin="0,0,0,10"
                        Style="{StaticResource ModernButton}"/>
                <Button Content="Переглянути дані" 
                        Click="OnViewClicked" 
                        Margin="0,0,0,10"
                        Style="{StaticResource ModernButton}"/>
                <Button Content="Подивитись графічно" 
                        Click="OnViewGraphClicked" 
                        Margin="0,0,0,10"
                        Style="{StaticResource ModernButton}"/>
                <Button Content="Порівняти методи" 
                        Click="OnCompareClicked" 
                        Margin="0"
                        Style="{StaticResource ModernButton}"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
