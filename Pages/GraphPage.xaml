<Page x:Class="FrekingCompareAnalysis.Pages.GraphPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FrekingCompareAnalysis.Pages"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1200"
      Title="Аналіз графіків">

    <Page.Resources>
        <!-- Стилі для кращого UI -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
        </Style>

        <Style x:Key="ModernListBox" TargetType="ListBox">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#007ACC"/>
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Ліва панель - елементи керування -->
        <Border Grid.Column="0" 
                Background="#F8F9FA" 
                BorderBrush="#E9ECEF" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="15">
            <StackPanel>
                <!-- Вибір файлу -->
                <TextBlock Text="Виберіть файл з даними:" Style="{StaticResource SectionHeader}"/>
                <ComboBox x:Name="FileComboBox" 
                          Style="{StaticResource ModernComboBox}"
                          Margin="0,0,0,15"
                          SelectionChanged="FileComboBox_SelectionChanged"/>

                <!-- Інформація про дані -->
                <Border Background="White" 
                        BorderBrush="#DEE2E6" 
                        BorderThickness="1" 
                        CornerRadius="3" 
                        Padding="10" 
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Інформація про дані:" FontWeight="SemiBold" FontSize="11"/>
                        <TextBlock x:Name="DataInfoText" 
                                   Text="Файл не вибрано" 
                                   FontSize="10" 
                                   Foreground="#666666" 
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Вибір параметрів -->
                <TextBlock Text="Виберіть параметри:" Style="{StaticResource SectionHeader}"/>
                <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="3">
                    <StackPanel>
                        <!-- Кнопки вибору -->
                        <Border Background="#F1F3F4" Padding="8,5">
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Вибрати всі" 
                                        x:Name="SelectAllBtn"
                                        Click="SelectAllBtn_Click"
                                        Style="{StaticResource ModernButton}"
                                        Margin="0,0,5,0"
                                        Padding="8,4"
                                        FontSize="10"/>
                                <Button Content="Очистити вибір" 
                                        x:Name="ClearAllBtn"
                                        Click="ClearAllBtn_Click"
                                        Style="{StaticResource ModernButton}"
                                        Padding="8,4"
                                        FontSize="10"/>
                            </StackPanel>
                        </Border>

                        <!-- Список параметрів -->
                        <ListBox x:Name="ParameterListBox"
                                 SelectionMode="Multiple"
                                 MaxHeight="200"
                                 Style="{StaticResource ModernListBox}"
                                 BorderThickness="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding}" 
                                              IsChecked="{Binding Path=IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}, Mode=TwoWay}"
                                              Checked="ParameterCheckChanged"
                                              Unchecked="ParameterCheckChanged"
                                              Margin="2"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>

                <!-- Опції графіка -->
                <TextBlock Text="Параметри графіка:" Style="{StaticResource SectionHeader}" Margin="0,15,0,5"/>
                <StackPanel>
                    <CheckBox x:Name="ShowPointsCheckBox" 
                              Content="Показувати точки даних" 
                              Margin="0,0,0,5"
                              Checked="ChartOptionChanged"
                              Unchecked="ChartOptionChanged"/>
                    <CheckBox x:Name="SmoothLinesCheckBox" 
                              Content="Гладкі лінії" 
                              Margin="0,0,0,5"
                              Checked="ChartOptionChanged"
                              Unchecked="ChartOptionChanged"/>
                    <CheckBox x:Name="ShowGridCheckBox" 
                              Content="Показувати сітку" 
                              IsChecked="True"
                              Margin="0,0,0,10"
                              Checked="ChartOptionChanged"
                              Unchecked="ChartOptionChanged"/>
                    <CheckBox x:Name="ShowFracturesCheckBox" 
                              Content="Показувати моменти розриву" 
                              IsChecked="True"
                              Margin="0,0,0,10"
                              Checked="ChartOptionChanged"
                              Unchecked="ChartOptionChanged"/>
                </StackPanel>

                <!-- Кнопка експорту -->
                <Button Content="Експортувати графік" 
                        x:Name="ExportBtn"
                        Click="ExportBtn_Click"
                        Style="{StaticResource ModernButton}"
                        Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Права панель - графік -->
        <Grid Grid.Column="1" Margin="15,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Заголовок графіка -->
            <Border Grid.Row="0" 
                    Background="#F8F9FA" 
                    BorderBrush="#E9ECEF" 
                    BorderThickness="1" 
                    CornerRadius="5,5,0,0" 
                    Padding="15,10">
                <StackPanel>
                    <TextBlock x:Name="ChartTitleText" 
                               Text="Аналіз даних свердловини" 
                               FontSize="16" 
                               FontWeight="SemiBold"/>
                    <TextBlock x:Name="ChartSubtitleText" 
                               Text="Виберіть параметри для відображення даних" 
                               FontSize="11" 
                               Foreground="#666666" 
                               Margin="0,2,0,0"/>
                </StackPanel>
            </Border>

            <!-- Контейнер для графіка -->
            <Border Grid.Row="1" 
                    BorderBrush="#E9ECEF" 
                    BorderThickness="1,0,1,1" 
                    CornerRadius="0,0,5,5">
                <Grid>
                    <!-- Індикатор завантаження -->
                    <Border x:Name="LoadingPanel" 
                            Background="White" 
                            Visibility="Collapsed"
                            Panel.ZIndex="1">
                        <StackPanel HorizontalAlignment="Center" 
                                    VerticalAlignment="Center">
                            <ProgressBar IsIndeterminate="True" 
                                         Width="200" 
                                         Height="4" 
                                         Margin="0,0,0,10"/>
                            <TextBlock Text="Завантаження даних графіка..." 
                                       FontSize="12" 
                                       Foreground="#666666"/>
                        </StackPanel>
                    </Border>

                    <!-- Графік -->
                    <lvc:CartesianChart x:Name="TimeChart"
                                        LegendLocation="None"
                                        Margin="10"
                                        AnimationsSpeed="0:0:0.3">
                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis Title="Час" 
                                      LabelsRotation="45"
                                      Foreground="#333"
                                      FontSize="10"/>
                        </lvc:CartesianChart.AxisX>
                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis Title="Шкала 1" 
                                      Foreground="#333"
                                      FontSize="10"/>
                            <lvc:Axis Title="Шкала 2" 
                                      Position="RightTop" 
                                      Foreground="#E53935"
                                      FontSize="10"/>
                        </lvc:CartesianChart.AxisY>
                    </lvc:CartesianChart>

                    <ProgressBar x:Name="LoadingIndicator"
                         IsIndeterminate="True"
                         Visibility="Collapsed"
                         Height="4"
                         VerticalAlignment="Top"
                         Margin="0,0,0,0"
                         Foreground="Blue" />

                    <!-- Повідомлення при відсутності даних -->
                    <TextBlock x:Name="NoDataMessage"
                               Text="Виберіть параметри з лівої панелі для перегляду даних"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="#999999"
                               Visibility="Visible"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
